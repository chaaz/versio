{
  "release": {
    "date": "{{release.date | date: "%Y-%m-%d"}}",
    "version": "{{release.version}}",
    "deps" : [
      {% for dep in release.deps %}
        {
          "id": "{{dep.id}}",
          "name": "{{dep.name}}",
        }
      {% endfor %}
    ],
    "prs" : [
      {% for pr in release.prs %}
        {
          "title": "{{pr.title}}",
          "name": "{{pr.name}}",
          "size": "{{pr.size}}",
          "href": "{{pr.href}}",
          "link": {{pr.link}},
          "commits": [
            {% for commit in pr.commits %}
              {
                "href": "{{commit.href}}",
                "link": commit.link,
                "shorthash": "{{commit.shorthash}}",
                "size": "{{commit.size}}",
                "summary": "{{commit.summary}}",
                "message": "{{commit.message}}"
              }
            {% endfor %}
          ]
        }
      {% endfor %}
    ]
  }
}
